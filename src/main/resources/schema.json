{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SmartCity Models",
  "type": "object",
  "properties": {
    "AlertaDeSeguranca": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "descricao": {
          "type": "string"
        },
        "resolvido": {
          "type": "boolean"
        }
      },
      "required": ["id", "descricao", "resolvido"]
    },
    "DadosDeTrafego": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "localizacao": {
          "type": "string"
        },
        "fluxoVeicular": {
          "type": "integer"
        }
      },
      "required": ["id", "localizacao", "fluxoVeicular"]
    },
    "Sensor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "tipo": {
          "type": "string"
        },
        "localizacao": {
          "type": "string"
        }
      },
      "required": ["id", "tipo", "localizacao"]
    }
  }
}
